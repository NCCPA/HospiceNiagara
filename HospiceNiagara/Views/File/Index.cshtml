@model IEnumerable<HospiceNiagara.Models.FileViewModel>

<div class="page-header">
    <h1>Resources</h1>
</div>
    <div class="col-xs-12 col-sm-10  col-sm-push-1">


        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Folder Name</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <a class="showfile"> &nbsp; &nbsp; &nbsp; <span class="widget-icon-left  glyphicon glyphicon-folder-open"> </span> &nbsp; Folder Icon  </a><br />  <div class="row fileList">
                            <br />
                            <div class="col-xs-12 col-sm-10  col-sm-push-1">
                                <table class="table panel-heading well well-sm ">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.FileName)</th>
                                        <th>@Html.DisplayNameFor(model => model.FileDescription)</th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FileName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FileDescription)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Download", "Download", new { id = item.ID }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
        </table>

    </div>
    </div>

