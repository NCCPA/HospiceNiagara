@model IEnumerable<HospiceNiagara.Models.ViewModels.AnnouncementViewModel>

<!-- Admin Announcement -->

<div class="row">
    <div class="col-md-3 col-sm-10">
        <!-- Search -->
        @using (Html.BeginForm("_announcement", "Announcement", FormMethod.Get))
        {
            <form class="form-inline" role="form">

                <div class="form-group">
                    <select class="form-control">
                        <option>Title</option>
                        <option>Date</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="text" placeholder="Search Announcements" class="form-control" name="searchAnnouncement">
                </div>

                <input type="submit" value="Search" class="btn btn-blue btn-default" />
            </form>
        }
        <!-- End Search -->

    </div>
</div>

<!-- Announcement List Content -->
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Announcement Title</th>
                    <th>Announcement Date</th>
                    <th>Announcement Description</th>
                    <td>
                        <button type="button" class="btn col-md-10 btn-default btn-green" data-toggle="modal" data-target="#addAnnouncement">
                            <span class="glyphicon pull-left glyphicon-plus"></span> Add Announcement
                        </button>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@Html.DisplayFor(i => item.Date)</td>
                        <td>@item.Description</td>
                        <td>
                            <button type="button" class="btn btn-default btn-blue col-md-10" data-toggle="modal" data-target="#@item.ID">
                                <span class="glyphicon pull-left glyphicon-edit"></span> Edit Announcement
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- End Announcement List Content-->
<!--Modal Pop-up add Announcement-->
<!-- Modal -->
<div class="modal fade" id="addAnnouncement" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add Announcement</h4>
            </div>
            <div class="modal-body">

                <!-- Form For Adding Announcement -->
                <form>
                    <div class="form-group">
                        <label for="announceTitle">Announcement Title</label>
                        <input type="text" class="form-control" id="announceTitle" placeholder="Announcement Title">
                    </div>
                    <div class="form-group">
                        <label for="announcDate">Date of Announcement</label>
                        <input type="date" class="form-control" id="announcDate">
                    </div>
                    <div class="form-group">
                        <label for="announcDetails">Announcement Details</label>
                        <textarea class="form-control" id="announcDetails"></textarea>
                    </div>
                    <button type="submit" class="btn btn-default btn-block btn-blue">Submit</button>
                    <button type="button" class="btn btn-default btn-block btn-blue" data-dismiss="modal">Cancel</button>
                </form>
                <!-- /END of form -->


            </div>
        </div>
    </div>
</div>
<!-- /End Modal Add Announcement-->
<!--Add Modal pop-up Edit Announcment-->
<!-- Button trigger modal -->
<!-- Modal -->
@foreach (var items in Model)
{ 
    <div class="modal fade" id="@items.ID" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Edit Announcement</h4>
                </div>
                <div class="modal-body">
                   
                     <!-- Form For Edditing Announcement -->
                    <form class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(i => items.Title, new { @class = "col-md-2 control-label" })    
                            <div class="col-md-10">
                                @Html.TextBoxFor(i => items.Title, new { @class = "form-control" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(i => items.Date, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                <input type="date" value="@Html.DisplayFor(i => items.Date)"  class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(i => items.Description, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(i => items.Description, new { @class = "form-control"})
                            </div>
                        </div>

                        <button type="submit" class="btn btn-default btn-block btn-blue">Submit</button>
                        <button type="button" class="btn btn-default btn-block btn-blue" data-dismiss="modal">Cancel</button>
                    </form>
                    <!-- /END of form -->
                    
                </div>
            </div>
        </div>
    </div>
}
<!-- /End Model Edit announcement-->
