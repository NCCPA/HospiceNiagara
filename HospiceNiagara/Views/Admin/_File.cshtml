@model IEnumerable<HospiceNiagara.Models.FileViewModel>
<br />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @using (Html.BeginForm("Index", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="col-md-4">
                <label for="folder">Folder</label>
                <select name="folders" class="form-control">
                    <option value="organizational">Organizational</option>
                    <option value="staff">Staff</option>
                    <option value="board">Board</option>
                    <option value="volunteer">Volunteer</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="fileDescription" class="control-label">Description</label>
                <input type="text" class="form-control" name="fileDescription" />
            </div>
            <div class="col-md-4">
                <label class="control-label">Select File</label>
                <input type="file" id="input-1a" class="file" name="FileUpload1" /><br />
            </div>
        }
        <a class="showfile"> &nbsp; &nbsp; &nbsp; <span class="widget-icon-left  glyphicon glyphicon-folder-open"> </span> &nbsp; Folder Container </a><br />  <div class="row fileList">
            <br />
            <div class="col-xs-12 col-sm-10  col-sm-push-1">
                <table class="table panel-heading well well-sm ">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FileName)</th>
                        <th>@Html.DisplayNameFor(model => model.FileDescription)</th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileDescription)
                            </td>
                            <td>
                                @Html.ActionLink("Download", "Download", new { id = item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>