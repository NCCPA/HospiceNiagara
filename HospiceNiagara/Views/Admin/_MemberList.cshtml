@model IEnumerable<HospiceNiagara.Models.MemberViewModel>
<br />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
<form class="form-inline">
    <div class="form-group">
        <label for="txtSearch" class="sr-only">Search By Name</label>
        <input type="text" class="form-control" id="txtSearch" placeholder="Enter Search Content">
    </div>
    <button type="submit" class="btn btn-default">Search</button>
</form>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>Phone</th>
                    <th>Date Of Birth</th>
                    <th><a href="/Account/Register" class="btn btn-default btn-blue col-md-7"><span class="glyphicon pull-left glyphicon-plus "></span> Add User</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                        <td><a class="btn btn-default btn-green col-md-7" href="@Url.Action("Index","Profile", new { ID = item.ID })"><span class="glyphicon pull-left glyphicon-user"></span> View Profiles</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
        </div>
    </div>


